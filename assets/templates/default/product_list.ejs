<script>
    //获取网络图数据并弹出
    function buildNetwork(source, target){
        var params = '?HPO=' + source;
        params += '&HPO=' + target;
        params += '&eng=' + eng;
        $.ajax({
            url : "http://202.121.178.141/cgi-bin/MDPA/Network.cgi" + params,
            type: 'GET',
            dataType: 'text',
            success: function( msg ) {
                $('#network-data').html( msg );
                $('#myModal').modal('show');
            },
            error: function() {
                alert("网络连接异常");
            }
        })
    }
</script>

