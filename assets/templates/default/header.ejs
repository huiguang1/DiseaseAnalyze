<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="contentSignUp">
            <ul class="nav nav-tabs" id="myTab">
                <li class="active">
                    <a href="#bodySignIn" data-toggle="tab"><% if (lan == 'eng') { %>Sign in<% } else { %>登录<% } %></a>
                </li>
                <li class="">
                    <a href="#bodySignUp" data-toggle="tab"><% if (lan == 'eng') { %>Sign up<% } else { %>注册<% } %></a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="modal-body tab-pane active" id="bodySignUp">
                    <form action="signUp" method="post" onsubmit="return checkSignUp(this);">
                        <label class="col-md-6" style="z-index: 1"><% if (lan == 'eng') { %>User name: <% } else { %>用户名：<% } %>
                            <input name="name">
                        </label>
                        <label class="col-md-6"><% if (lan == 'eng') { %>Password: <% } else { %>密码：<% } %>
                            <input name="password" type="password"><% if (lan == 'eng') { %>More than 6 characters<% } else { %>请输入6位以上的密码<% } %>
                        </label>
                        <label class="col-md-6" style="float: none; "><% if (lan == 'eng') { %>Password again: <% } else { %>再次输入密码：<% } %>
                            <input name="verifyPassword" type="password">
                        </label>
                        <button class="btn btn-default" type="submit">提交</button>
                    </form>
                </div>
                <div class="modal-body tab-pane" id="bodySignIn">
                    <form action="signIn" method="post">
                        <label class="col-md-6"><% if (lan == 'eng') { %>User name: <% } else { %>用户名：<% } %>
                            <input name="name">
                        </label>
                        <label class="col-md-6"><% if (lan == 'eng') { %>Password: <% } else { %>密码：<% } %>
                            <input name="password">
                        </label>
                        <button class="btn" type="submit">提交</button>
                    </form>
                </div>

            </div>
        </div>
    </div><!-- /.modal -->
</div>

<script>
    var eng = '<%-lan%>' == 'eng' ? 1 : 0;
    $(function () {
        $('#myTab a:last').tab('show');
    })

    function signInOrUp(){
        $('#loginModal').modal('show');
    }

    function checkSignUp(form) {
        if (form.elements['name'].value.length <= 0 || form.elements['name'].value.length > 20)
        {
            alert('用户名长度在1-20之间！')
            return false;
        }
        if (form.elements['password'].value.length < 6 || form.elements['password'].value.length > 20)
        {
            alert('密码长度在6-20之间！')
            return false;
        }
        if (form.elements['password'].value != form.elements['verifyPassword'].value)
        {
            alert('两次输入的密码不一致！')
            return false;
        }
        $(form).ajaxSubmit({
            async: false,
            complete: function (XHR, TS){
                if (XHR.responseText == 'success'){
                    alert('恭喜，注册成功！');
                    window.location.href = '/';
                }
                else if (XHR.responseText == 'exist'){
                    alert('该用户名已存在，请换其他用户名！');
                }
            }
        });
        return false;
    }
</script>
